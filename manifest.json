{
  "manifest_version": 3,
  "name": "SearchSync - Custom Instant Search",
  "version": "1.1",
  "description": "Automates copying text to preset URLs with paste and submit.",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "popup.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["README.md"],
      "matches": ["<all_urls>"]
    }
  ]
}